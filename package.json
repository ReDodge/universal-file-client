{
  "name": "universal-file-client",
  "version": "1.0.1",
  "description": "Universal file transfer client with unified interface for FTP, SFTP, and HTTP protocols",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "file-transfer",
    "ftp",
    "sftp",
    "http",
    "https",
    "unified-client",
    "multi-protocol",
    "typescript"
  ],
  "author": "ReDodge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReDodge/universal-file-client.git"
  },
  "bugs": {
    "url": "https://github.com/ReDodge/universal-file-client/issues"
  },
  "homepage": "https://github.com/ReDodge/universal-file-client#readme",
  "dependencies": {
    "axios": "^1.4.0",
    "basic-ftp": "^5.0.5",
    "ssh2-sftp-client": "^10.0.3",
    "universal-file-client": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^16.11.64",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts"
    ]
  }
}
